<?php
if (!isset($_POST['email']))
  Location("./?page=ansoeg");

$fornavn = htmlspecialchars($_POST['fornavn']);
$efternavn = htmlspecialchars($_POST['efternavn']);
$studienummer = htmlspecialchars($_POST['studienummer']);
$retning = htmlspecialchars($_POST['retning']);
$email_from = htmlspecialchars($_POST['email']);
$telefon = htmlspecialchars($_POST['telefon']);
$begrundelse = nl2br(htmlspecialchars($_POST['begrundelse']));
$erfaring = nl2br(htmlspecialchars($_POST['erfaring']));
$omdig = nl2br(htmlspecialchars($_POST['omdig']));
$rustur = htmlspecialchars($_POST['tidligere_rusture']);
$hilsen = nl2br(htmlspecialchars($_POST['hilsen']));

include "phpmailer/PHPMailerAutoload.php";

$mail = new PHPMailer;

$mail->CharSet = "UTF-8";
$mail->isSMTP();
$mail->Host = 'smtp.gmail.com';
$mail->SMTPAuth = true;
$mail->Username = 'dtu.kabs@gmail.com';
$mail->Password = 'DTUk4bstron4ut14';
$mail->SMTPSecure = 'tls';

$mail->From = "$studienummer@student.dtu.dk";
$mail->FromName = "$fornavn $efternavn";
$mail->addAddress('dtu.kabs@gmail.com', 'KABS');
$mail->addReplyTo($email_from, "$fornavn $efternavn");

$mail->WordWrap = 70;
$mail->isHTML(true);

$wishes = "<p>";
foreach($_POST['oensker'] as $value) {
  $wishes .= "$value<br />";
}
$wishes .= "</p>";

$mail->Subject = "Ansøgning: $retning - $fornavn";
$mail->Body = <<<EOT
<p><b>Navn</b>: $fornavn $efternavn</p>
<p><b>Studienummer</b>: $studienummer</p>
<p><b>Retning</b>: $retning</p>
<p><b>E-mail</b>: $email_from</p>
<p><b>Telefonnummer</b>: $telefon</p>
<br />
<p><b>Retninger ansøgt</b>:</p>
$wishes
<br />
<p><b>Begrundelse</b>:</p>
<p>$begrundelse</p>
<br />
<p><b>Erfaring</b>:</p>
<p>$erfaring</p>
<br />
<p><b>Om personen</b>:</p>
<p>$omdig</p>
<br />
<p><b>Tidligere deltagede rusture</b>:</p>
<p>$rustur</p>
<br />
<p><b>Hilsen</b>:</p>
$hilsen
EOT;

$mail->AltBody = <<<EOT
Navn: $fornavn $efternavn\r\n
Studienummer: $studienummer\r\n
Retning: $retning\r\n
E-mail: $email_from\r\n
Telefonnummer: $telefon\r\n
\r\n
Retninger ansøgt:\r\n
$wishes
\r\n
Begrundelse:\r\n
$begrundelse\r\n
\r\n
Erfaring:\r\n
$erfaring\r\n
\r\n
Om personen:\r\n
$omdig\r\n
\r\n
Tidligere deltagede rusture:\r\n
$rustur\r\n
\r\n
Hilsen til KABS:\r\n
$hilsen\r\n
\r\n
EOT;

$sent = "";
if($mail->send()) {
  $sent = "true";
} else {
  $sent = "false";
}

header("Location: ./?page=ansoeg&sent=$sent");
?>
