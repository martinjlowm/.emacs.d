extract () {
    if [ -f $1 ] ; then
        case $1 in
            *.tar.bz2)   tar xjf $1;;
            *.tar.gz)    tar xzf $1;;
            *.bz2)       bunzip2 $1;;
            *.rar)       rar x $1;;
            *.gz)        gunzip $1;;
            *.tar)       tar xf $1;;
            *.tbz2)      tar xjf $1;;
            *.tgz)       tar xzf $1;;
            *.zip)       unzip $1;;
            *.Z)         uncompress $1;;
            *.7z)        7z x $1;;
            *)           echo "'$1' cannot be extracted via extract()" ;;
        esac
    else
        echo "'$1' is not a valid file"
    fi
}

alias clipboard='tr -d "\r\n" | xclip -selection clipboard'
linky () {
    if [ -f $1 ] ; then
        dropbox puburl $1 | clipboard
    else
        echo "'$1' is not a valid file"
    fi
}

zippy () {
    zip -r $1 ./*
}

hlfiles () {
    for f in $1/*
    do
        ln $f;
    done
}

search() {
    if [ -d $2 ] ; then
        grep $1 $(find $2 -type f);
    else
        grep $1 $(find . -type f);
    fi
}

